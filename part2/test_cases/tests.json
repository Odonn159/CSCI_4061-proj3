                    "output_file": "test_cases/output/two_elem_input_output_check.txt"
                }
            ],
            "steps": [
                [
                    {
                        "target": "Execute Pipeline",
                        "type": "run"
                    }
                ],
                [
                    {
                        "target": "Check Output File",
                        "type": "run"
                    }
                ]
            ]
        },
